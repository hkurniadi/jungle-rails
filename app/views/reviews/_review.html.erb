<div class="col-sm-8">
  <h4>User <%= review.user_id %> review</h4>
  <dl class="dl-horizontal">
    <dt>Rating</dt>
    <dd><%= review.rating %></dd>
    <dt>Description</dt>
    <dd><%= review.description %></dd>
    <% if current_user && review.user_id == current_user.id %>
      <%= link_to "Delete Comment", [@product, review], method: :delete, data: { confirm: "Are you sure?"} %>
    <% end %>
  </dl>
</div>
